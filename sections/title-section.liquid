{% schema %}
{
  "name": "Titre personnalisé",
  "tag": "section",
  "class": "section custom-title-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Texte du titre",
      "default": "Votre titre ici"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignement",
      "default": "center",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Droite" }
      ]
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Taille du titre (rem)",
      "min": 1,
      "max": 6,
      "step": 0.1,
      "default": 3
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Graisse de la police",
      "default": "font-bold",
      "options": [
        { "value": "font-normal", "label": "Normal" },
        { "value": "font-medium", "label": "Semi-gras" },
        { "value": "font-bold", "label": "Gras" },
        { "value": "font-extrabold", "label": "Très gras" }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "Activer un dégradé",
      "default": false
    },
    {
      "type": "color",
      "id": "color_start",
      "label": "Dégradé - couleur de départ",
      "default": "#4fd1c5"
    },
    {
      "type": "color",
      "id": "color_end",
      "label": "Dégradé - couleur de fin",
      "default": "#1a202c"
    },
    {
      "type": "color",
      "id": "solid_color",
      "label": "Couleur du texte (si pas de dégradé)",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Marge au-dessus (rem)",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "default": 2
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Marge en dessous (rem)",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Titre personnalisable"
    }
  ]
}
{% endschema %}

<section
  class="custom-title-wrapper"
  style="
    margin-top: {{ section.settings.margin_top }}rem;
    margin-bottom: {{ section.settings.margin_bottom }}rem;
    text-align: {{ section.settings.text_alignment }};
  "
>
  <h2
    class="{{ section.settings.font_weight }}"
    style="
      font-size: {{ section.settings.font_size }}rem;
      {% unless section.settings.enable_gradient %}
        color: {{ section.settings.solid_color }};
      {% endunless %}
    "
  >
    {% if section.settings.enable_gradient %}
      <span style="
        background: linear-gradient(90deg, {{ section.settings.color_start }}, {{ section.settings.color_end }});
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
      ">
        {{ section.settings.title }}
      </span>
    {% else %}
      {{ section.settings.title }}
    {% endif %}
  </h2>
</section>
