{% schema %}
{
  "name": "info-section",
  "tag": "section",
  "class": "info-section-section",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Contenu HTML",
      "default": "<h3>Informations générales</h3><p>Ajoutez ici votre contenu.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignement du texte",
      "default": "left",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Droite" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#f2f2f2"
    }
  ],
  "presets": [
    {
      "name": "Info Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .info-section-wrapper {
    padding: 40px 20px;
  }
  .info-section-content {
    max-width: 900px;
    margin: 0 auto;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    color: #6e6e73;
    font-size: 14px;
    line-height: 1.8;
  }

  .info-section-content h3 {
    font-size: 16px;
    margin-bottom: 10px;
    color: #1d1d1f;
  }

  .info-section-content p {
    margin-bottom: 12px;
  }

  .info-section-content ul {
    margin-left: 20px;
    list-style-type: disc;
    margin-bottom: 12px;
  }

  .info-section-content strong {
    color: #333;
  }

  .info-section-content.left {
    text-align: left;
  }

  .info-section-content.center {
    text-align: center;
  }

  .info-section-content.right {
    text-align: right;
  }
{% endstyle %}

<div class="info-section-wrapper" style="background-color: {{ settings.background_color }};">
  <div class="info-section-content {{ settings.text_alignment }}">
    {{ settings.content }}
  </div>
</div>
