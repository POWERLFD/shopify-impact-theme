{% stylesheet %}
.info-section {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  color: #6e6e73;
  line-height: 1.8;
  font-size: 12px;
  margin: 5px 0;
  padding: 2rem 1rem;
  background-color: var(--info-background, #f2f2f2);
}
.info-section h3 {
  color: #1d1d1f;
  font-size: 14px;
  margin-bottom: 10px;
}
.info-section p {
  margin-bottom: 12px;
}
.info-section strong {
  color: #333;
}
.info-section ul {
  list-style-type: disc;
  margin-left: 20px;
  margin-bottom: 12px;
}
.separator {
  margin-top: 20px;
  border-top: 1px solid #d2d2d7;
  height: 1px;
  background-color: #f5f5f7;
}
{% endstylesheet %}

<section class="info-section" style="--info-background: {{ section.settings.background_color }};">
  {{ section.settings.text_content }}
  <div class="separator"></div>
</section>

{% schema %}
{
  "name": "Informations importantes",
  "tag": "section",
  "class": "info-important-wrapper",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#f2f2f2"
