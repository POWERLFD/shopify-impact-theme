{% stylesheet %}
.info-section {
  padding: 2rem 1rem;
  text-align: center;
}
.info-section--left {
  text-align: left;
}
.info-section--right {
  text-align: right;
}
.info-section__title {
  margin-bottom: 1rem;
  font-weight: bold;
}
.info-section__content {
  max-width: 800px;
  margin: 0 auto;
}
{% endstylesheet %}

<section class="info-section info-section--{{ section.settings.text_position }}" style="background-color: {{ section.settings.background_color }};">
  <div class="info-section__content">
    <h2 class="info-section__title" style="font-size: {{ section.settings.title_size }}px;">
      {{ section.settings.title | escape }}
    </h2>
    <div class="info-section__text" style="font-size: {{ section.settings.text_size }}px;">
      {{ section.settings.text_content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Info Section",
  "tag": "section",
  "class": "info-section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "text_position",
      "label": "Position du texte",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centr√©" },
        { "value": "right", "label": "Droite" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Taille du texte (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Votre titre ici"
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Contenu principal",
      "default": "<p>Votre texte ici. Vous pouvez ajouter des liens, du gras ou des listes.</p>"
    }
  ],
  "presets": [
    {
      "name": "Info Section",
      "category": "Texte"
    }
  ]
}
{% endschema %}
