{% comment %}
  Bloc : custom_image_text_block
  Affiche une image à gauche et un texte à droite dans un layout horizontal (responsive).
{% endcomment %}

<div class="custom-image-text-block" style="display: flex; align-items: center; flex-wrap: wrap; font-family: 'DIN Next', Arial, sans-serif; gap: 16px;">
  {% if section.settings.image != blank %}
    <div style="flex: 0 0 auto;">
      <img
        src="{{ section.settings.image | image_url }}"
        alt="{{ section.settings.image.alt | escape }}"
        style="width: {{ section.settings.image_width }}; height: auto; max-width: 100%;"
      >
    </div>
  {% endif %}

  <div style="flex: 1; min-width: 200px;">
    <p style="margin: 0; color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size }}px; font-weight: bold;">
      {{ section.settings.main_text }}
      {% if section.settings.sub_text != blank %}
        <span style="font-weight: normal;">{{ section.settings.sub_text }}</span>
      {% endif %}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Image + Texte horizontal",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image à gauche"
    },
    {
      "type": "text",
      "id": "main_text",
      "label": "Texte principal (gras)",
      "default": "+200.000"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sous-texte (normal)",
      "default": "utilisateurs quotidiens satisfaits"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#1a1a1a"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Taille du texte (px)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 13
    },
    {
      "type": "text",
      "id": "image_width",
      "label": "Largeur de l’image (px ou %)",
      "default": "100px"
    }
  ],
  "presets": [
    {
      "name": "Image + Texte horizontal"
    }
  ]
}
{% endschema %}
