<div class="custom-image-text-block" style="display: flex; align-items: center; flex-wrap: wrap; font-family: 'DIN Next', Arial, sans-serif; gap: 16px;">
  {% if block.settings.image != blank %}
    <div style="flex: 0 0 auto;">
      <img
        src="{{ block.settings.image | image_url }}"
        alt="{{ block.settings.image.alt | escape }}"
        style="width: {{ block.settings.image_width }}; height: auto; max-width: 100%;"
      >
    </div>
  {% endif %}

  <div style="flex: 1; min-width: 200px;">
    <p style="margin: 0; color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px; font-weight: bold;">
      {{ block.settings.main_text }}
      {% if block.settings.sub_text != blank %}
        <span style="font-weight: normal;">{{ block.settings.sub_text }}</span>
      {% endif %}
    </p>
  </div>
</div>
